<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage"
    android:background="@drawable/logohd">

    <TextView
        android:id="@+id/Titletxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:gravity="center|center_horizontal"
        android:text="Login Calculator Project"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Calcbtn"
        style="@android:style/Widget.Button"
        android:layout_width="159dp"
        android:layout_height="88dp"
        android:layout_marginStart="129dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="30dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Calculator"
        app:layout_constraintBottom_toTopOf="@+id/Howtobtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Titletxt" />

    <Button
        android:id="@+id/Howtobtn"
        style="@android:style/Widget.Button"
        android:layout_width="159dp"
        android:layout_height="88dp"
        android:layout_marginStart="129dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="How to use"
        app:layout_constraintBottom_toTopOf="@+id/Aboutbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Calcbtn" />

    <Button
        android:id="@+id/Aboutbtn"
        style="@android:style/Widget.Button"
        android:layout_width="159dp"
        android:layout_height="88dp"
        android:layout_marginStart="129dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="240dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="About"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Howtobtn" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Â© 2020 C#Course All Rights reserved"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>